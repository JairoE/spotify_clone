<!DOCTYPE html>
<html>
  <head>
    <title>Moodify</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if session[:user_id] %>
        <h1>Look for a playlist that fits your sadboi levels</h1>
        <%= form_tag(user_playlists_search_by_mood_path(session[:user_id]), method: :get) do %>
        <%= label_tag "Enter your mood" %>
        <%= number_field_tag :mood, nil, min:1, max:10, placeholder: "Enter a Mood" %>
        <%= submit_tag "︻╦╤─" %>
        <% end %>
      <% end %>
    </nav>
    <%= yield %>

    <% if session[:user_id] %>
      <%= button_to 'Logout', action: 'logout', controller: 'users' %>
      <%= button_to 'Home', user_path(session[:user_id]), :method => :get %>

  <% end %>
  </body>
</html>
