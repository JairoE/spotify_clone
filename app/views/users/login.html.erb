<div class="row_filler"></div>
  <div class="ui center aligned grid">
    <div class="column" id="login_form">
      <div class="ui form">
          <div class="equal width fields">
          <%= form_tag ({controller: 'users', action: 'post_login', method: 'post'}) do %>
          <div class="required field">
            <!-- <label> Username </label> -->
            <%= text_field_tag :'user[username]',"", placeholder: "Username" %>
          </div>
          <div class="required field">
            <!-- <label> Password </label> -->
            <%= password_field_tag :'user[password]',"", placeholder: "Password" %>
          </div>
            <button id="login_form_button" type="submit" formmethod="post" formaction="/login" class="ui primary button">
              LOG IN
            </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row_filler"></div>
